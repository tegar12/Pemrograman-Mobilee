<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/vertical_activity"
    android:layout_marginBottom="@dimen/vertical_activity"
    android:layout_marginLeft="@dimen/horizontal_activity"
    android:layout_marginRight="@dimen/horizontal_activity"
    tools:context=".Data2Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="activity_2"
        android:gravity="center"
        android:layout_marginBottom="@dimen/vertical_activity"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tv_received_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_activity"
        android:text=""
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center" />

</LinearLayout>